{
  "name": "rpg-forja-estrelar",
  "version": "1.0.0",
  "description": "Site de RPG gratuito para jogar com amigos",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "docs": "start http://localhost:3000/api-docs",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/unitario",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integracao"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@types/multer": "^2.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4"
  }
}
